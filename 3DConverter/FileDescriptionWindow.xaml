<Window x:Class="_3DConverter.FileDescriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3DConverter"
        mc:Ignorable="d"
        Title="FileDescriptionWindow" Height="450" Width="800">
    <Grid>
        <TextBlock FontSize="50" Text="{Binding Path=FileType}" />
        <ProgressBar Height="100" Minimum="0" Maximum="100" Value="{Binding Path=Progress}" Name="pbStatus" Margin="100,167,100,167" />
        <TextBlock Text="{Binding ElementName=pbStatus,
                                Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Window>
